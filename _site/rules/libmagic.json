{
  "patterns": ["\\blibmagic\\b"],
  "dependencies": [
    {
      "packages": ["libmagic-dev"],
      "constraints": [
        {
          "os": "linux",
          "distribution": "ubuntu"
        },
        {
          "os": "linux",
          "distribution": "debian"
        }
      ]
    },
    {
      "packages": ["file-devel"],
      "constraints": [
        {
          "os": "linux",
          "distribution": "centos",
          "versions": ["6", "7"]
        },
        {
          "os": "linux",
          "distribution": "redhat",
          "versions": ["6"]
        }
      ]
    },
    {
      "packages": ["file-devel"],
      "pre_install": [
        { "command": "dnf install -y dnf-plugins-core" },
        { "command": "dnf config-manager --set-enabled powertools" }
      ],
      "constraints": [
        {
          "os": "linux",
          "distribution": "centos",
          "versions": ["8"]
        }
      ]
    },
    {
      "packages": ["file-libs"],
      "constraints": [
        {
          "os": "linux",
          "distribution": "redhat",
          "versions": ["7", "8"]
        }
      ]
    },
    {
      "packages": ["file-devel"],
      "constraints": [
        {
          "os": "linux",
          "distribution": "opensuse"
        },
        {
          "os": "linux",
          "distribution": "sle"
        }
      ]
    }
  ]
}